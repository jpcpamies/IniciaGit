body 
	background fondo
	color gris
	font-family texto
article
	background white

header
	img
		display block
		margin 1em auto 0 auto
		width 80px

footer
	background azul
	height 10em
	.avatar
		background white
		display inline-block
		float left
		height 10em
		position relative
		width 8em
		&:after
			border-top solid 0 green
			border-left solid 5em white
			border-bottom solid 10em transparent
			border-right solid 10px transparent
			content ""
			left 8em
			position absolute
			top 0px
		img
			border 2px solid white
			border-radius 50%
			box-shadow 0 0 2px black
			height auto
			left 1.3em
			width 4em
			position absolute
			top 1em
			z-index 5
		
		// div
		// 	-moz-transform skew(-27deg)
		// 	-o-transform skew(-27deg)
		// 	-webkit-transform skew(-27deg)
		// 	background white
		// 	box-shadow 0 0 1px rgba(black,1)
		// 	height 45px
		// 	left 6.5em
		// 	margin 10px 0 0 -40px
		// 	position absolute
		// 	top .7em
		// 	width 95px
		// 	z-index 4

		p
			color gris
			font-size 1em
			left 5.5em
			line-height 1.1em;
			position absolute
			text-align left
			// text-shadow 1px 1px 1px black
			top 1.4em
			z-index 4
				

	.social
		position relative
		text-shadow 1px 1px 1px black
		z-index 3
		a
			color white
			font-family texto
			font-weight bold
		.twitter
		.github
		.email
			position absolute
			&:before
				font-family icono
				margin 0 .5em 0 0
				vertical-align bottom

		.twitter
			right 1.8em
			text-decoration none
			top 1.5em
			&:before
				content "\e606"
			&:hover
				color #21b2e9
				
		.github
			right 3.5em
			text-decoration none
			top 4em
			&:before
				content "\e609"
			&:hover
				color grey

		.email
			right 1em
			text-decoration none
			top 6.5em
			&:before
				content "\e602"
			&:hover
				color #dec164
				
				




