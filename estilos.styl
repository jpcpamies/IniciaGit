body 
	background fondo
	color gris
	font-family texto
	font-size 16px
article
	background white
	border-radius 5px
	box-shadow 0 1px 0 rgba(black,.2)
	margin .6em .9em

header
	img
		display block
		margin 1em auto 0 auto
		width 80px

footer
	background azul
	height 10em
	.avatar
		background white
		display inline-block
		float left
		height 10em
		position relative
		width 8em
		&:after
			border-top solid 0 green
			border-left solid 5em white
			border-bottom solid 10em transparent
			border-right solid 10px transparent
			content ""
			left 8em
			position absolute
			top 0px
		img
			border 2px solid white
			border-radius 50%
			box-shadow 0 0 2px black
			height auto
			left 1.3em
			width 3em
			position absolute
			top 1em
			z-index 5

		p
			color gris
			font-size 1em
			left 4.7em
			line-height 1.1em;
			position absolute
			text-align left
			top .9em
			z-index 4

	.social
		position relative
		// text-shadow 1px 1px 0px rgba(black,.5)
		z-index 3
		a
			color white
			font-family texto
			font-size .8em
			font-weight bold
		.twitter
		.github
		.email
			position absolute
			transition all .2s ease
			&:before
				font-family icono
				margin 0 .5em 0 0
				vertical-align bottom

		.twitter
			right 1.8em
			text-decoration none
			top 2.7em
			&:before
				content "\e606"
			&:hover
				color #21b2e9
				
		.github
			right 3.5em
			text-decoration none
			top 5.8em
			&:before
				content "\e609"
			&:hover
				color grey

		.email
			right 1em
			text-decoration none
			top 9em
			&:before
				content "\e602"
			&:hover
				color #dec164

h1
	font-size 3em;
	font-family titulo
	margin 0 0 .5em 0
	text-align center
	small
		border-top 1px solid borde
		color gris
		display block
		font-size .39em;
		line-height -5em
		margin .1em auto 0 auto 
		max-width 17em

h2
	display inline-block
	font-family mayuscula
	font-size 2em;
	letter-spacing -3px
	margin 0

nav
	overflow-x hidden
	position relative
	z-index 5

p
	margin .5em
	&:first-child 
		margin 0 .5em

section
	background #dcdcdc
	margin -.6em .0
	padding .6em 0

#mm0
	background azul
	border 1px solid fondo
	color white
	font-size 1.5em
	height 2em
	left -5px
	position relative
	width 108.5%

.arriba
	background gris
	border-radius 50%
	bottom 1em
	color white
	height 3em
	opacity .6
	position fixed
	left 1em
	width 3em
	-webkit-transition all .2s ease
	transition all .2s ease
	a 
		color: white;
		text-decoration none
		position relative
		&:after
			content "\e608"
			font-family icono
			font-size 2em
			text-align center
			position absolute
			top 0em
			left .45em
		
.encabezado
	margin 0 0 1em 0
	.numero
		background #a9a9a9
		color fondo
		float left
		font-family mayuscula
		font-size .5em
		height 1.4em 
		margin 1.2em 1.5em 0 0
		padding .15em 0 0 0 
		position relative
		text-align center
		width 2em 
		z-index 0
		&:after
			border-top solid 0 transparent
			border-left solid .7em #a9a9a9
			border-bottom solid 1.4em transparent
			border-right solid 0 transparent
			content ""
			left 2em
			position absolute
			top 0px


	.nombre
		display block
		line-height 1em
		margin .4em .5em 0 2em
		text-align left

.lista
	color white
	font-size 1.7em
	position absolute
	right .5em
	top .25em
	width 30px
	&:after
		content "\e605"
		font-family icono

.fixed 
	position fixed
	left 0px
	top -1px
	right 0px




