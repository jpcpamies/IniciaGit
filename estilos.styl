body 
	background fondo
	color gris
	font-family texto
article
	background white

header
	img
		display block
		margin 1em auto 0 auto
		width 80px

footer
	background azul
	height 10em
	.avatar
		background white
		display inline-block
		float left
		height 10em
		position relative
		width 8em
		&:after
			border-top solid 0 green
			border-left solid 5em white
			border-bottom solid 10em transparent
			border-right solid 10px transparent
			content ""
			left 8em
			position absolute
			top 0px
		img
			border 2px solid white
			border-radius 50%
			box-shadow 0 0 2px black
			height auto
			left 1.3em
			width 4em
			position absolute
			top 1em
			z-index 5

		p
			color gris
			font-size 1em
			left 5.5em
			line-height 1.1em;
			position absolute
			text-align left
			top 1.4em
			z-index 4

	.social
		position relative
		// text-shadow 1px 1px 1px black
		z-index 3
		a
			color white
			font-family texto
			font-weight bold
		.twitter
		.github
		.email
			position absolute
			transition all .2s ease
			&:before
				font-family icono
				margin 0 .5em 0 0
				vertical-align bottom

		.twitter
			right 1.8em
			text-decoration none
			top 1.5em
			&:before
				content "\e606"
			&:hover
				color #21b2e9
				
		.github
			right 3.5em
			text-decoration none
			top 4em
			&:before
				content "\e609"
			&:hover
				color grey

		.email
			right 1em
			text-decoration none
			top 6.5em
			&:before
				content "\e602"
			&:hover
				color #dec164

h1
	font-size 4em;
	font-family titulo
	margin 0
	text-align center

h2 
	border-top 1px solid borde 
	display block
	font-family titulo
	font-size 1.3em;
	margin .1em auto 1em auto
	max-width 300px
	text-align center
h3
	font-family cabecera
	font-size 3em;
	letter-spacing -3px
	margin 0
	padding .5em 0
	text-align center

nav
	overflow-x hidden
	position relative

p
	margin .5em
	&:first-child 
		margin 0 .5em

#mm0
	background azul
	border 1px solid fondo
	color white
	font-size 1.5em
	height 2em
	left -5px
	position relative
	width 108.5%

.arriba
	background gris
	border-radius 50%
	bottom 1em
	color white
	height 3em
	opacity .6
	position fixed
	left 1em
	width 3em
	-webkit-transition all .5s ease
	transition all .5s ease
	a 
		color: white;
		text-decoration none
		position relative
		&:after
			content "\e608"
			font-family icono
			font-size 2em
			text-align center
			position absolute
			top 0em
			left .45em
		

.lista
	color white
	font-size 1.7em
	position absolute
	right .5em
	top .25em
	width 30px
	&:after
		content "\e605"
		font-family icono

.fixed 
	position fixed
	left 0px
	top -1px
	right 0px




