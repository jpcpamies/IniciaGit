body 
	background fondo
	color gris
	font-family texto
	font-size 15px

h1
	font-size 3em;
	font-family titulo
	font-weight normal
	margin 0 
	text-align center
	small
		border-top 1px solid borde
		color gris
		display block
		font-size .39em;
		line-height -5em
		margin .1em auto 0 auto 
		max-width 17em

h2
	display inline-block
	font-family mayuscula
	font-weight normal
	font-size 2em;
	letter-spacing -3px
	margin .5em 0 .5em 0

h3
	color azul
	font-family mayuscula
	font-weight normal
	letter-spacing -2px

p
	line-height 1.4
	margin .5em 2em
	&:first-child 
		margin 0 2em 0 2em

.arriba
	bottom 1em
	color white
	left 1.2em
	opacity .95
	position fixed
	-webkit-transition all .1s ease
	transition all .1s ease
	z-index 10
	a 
		background #d9d9d9
		border-radius 50%
		color: claro;
		display block
		height 3em
		position relative
		text-decoration none
		transition all .2s ease
		-webkit-transition all .2s ease
		width 3em
		&:after
			content "\e610"
			font-family icono2
			font-size 1.6em
			text-align center
			position absolute
			top .35em
			left .45em
		&:hover
			background gris

.caja
	background claro
	border-top 1px solid borde
	border-bottom 1px solid borde
	margin 0 0 1em 0
	padding 0 0 .7em 0
	.resumen
		padding 1em
	.autor
		color grey
		margin-bottom 0
		padding 0 0 0 1em
	.fecha
		color grey
		margin 0 1em
		padding 0 0 0 1em
	h3
		font-size 1.5em
		margin 1em .5em
		text-align center

// Break points

@media screen and (min-width: 992px) 
	@import "bp3.styl"


@media screen and (max-width: 992px) 
	@import "bp2.styl"


@media screen and (max-width: 630px) 
	@import "bp1.styl"
