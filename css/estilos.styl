article
	background white
	// border 1px solid rgba(borde,.8)
	border-radius 5px
	// box-shadow: 0 0 6px rgba(0,0,0,0.2);
	box-shadow: 0 2px 2px rgba(0,0,0,0.3);
	margin 1em
	padding 0 0 1em 0
	&:last-child
		margin-bottom 4.5em
	.encabezado
		margin 0 0 1em 0
		.iniciando
			&:before
				color claro
				content "\e605"
				font-family icono
				font-size .9em
				font-weight none
				position absolute
				right .6em
				top .3em
		.libro
			&:before
				color claro
				content "\e600"
				font-family icono
				font-size .9em
				font-weight none
				position absolute
				right .6em
				top .3em
		.numero
			background azul
			color fondo
			float left
			font-family mayuscula
			font-size .5em
			font-weight bold
			height 1.7em 
			line-height 1.5
			margin 1em 1.5em 0 0
			padding .15em 0 0 0 
			position relative
			text-align center
			width 2em 
			z-index 0
			&:after
				border-top solid 0 transparent
				border-left solid .7em azul
				border-bottom solid 1.8em transparent
				border-right solid 0 transparent
				content ""
				left 2em
				position absolute
				top 0px
		.nombre
			display block
			line-height 1em
			margin .4em .5em 0 2em
			text-align left
		.video
			&:before
				color claro
				content "\e601"
				font-family icono
				font-size .9em
				font-weight none
				position absolute
				right .6em
				top .3em
	.materiales_video
		background claro
		border-bottom 1px solid borde
		border-top 1px solid borde
		margin 1em 0 3em 0 
		padding 1em 
		.video
			background white
			border 1px solid rgba(gris,.3)
			border-radius 5px
			box-shadow 0 2px 0 rgba(black,.3)
			display inline-block
			padding 2em 0 .5em 0 
			vertical-align top
			width 45%
			.contenedor
				height 0
				overflow hidden
				padding-bottom 56.25%
				padding-top 30px
				position relative
				iframe
					height  100%
					left 0
					position absolute
					top 0
					width 100%
			.detalles
				padding .5em .5em
				.autor
					color rgba(gris,1)
					display inline-block
					float left
					font-size .7em
					font-weight bold
					margin 0 .0 .5em 18px
					vertical-align top
				.fecha
					color rgba(gris,.4)
					display inline-block
					font-size .7em
					margin 0 0 .5em 18px
					vertical-align top
				.resumen
					display inline-block
					font-size .8em
					margin -.2em 1.5em .5em 1.5em
					vertical-align top
				.titulo
					border-bottom 1px solid borde
					color azul
					font-family mayuscula
					font-size 1.2em
					letter-spacing -1px
					margin 0 0 1em 0
					padding .2em  
	.materiales_libro
		background white
		border-bottom 1px solid borde
		border-top 1px solid borde
		margin 1em 0 3em 0 
		padding 1em 
		.libros
			border-bottom 1px solid borde
			display inline-block
			margin 0 0 1em 0
			padding 0 0 .5em 0 
			width 100%
			.ejemplar
				padding 0 0 0 1.5em
				position relative
				.detalles
					left 8.5em
					position absolute
					top 0em
					.autor
						color rgba(gris,1)
						font-size .7em
						font-weight bold
						margin 0
					.idioma
						margin .5em 0 0 0 
						img
							border-radius 50%
							width 20px
							height 20px
					.resumen
						font-size .8em
						margin 0
					.titulo
						color azul
						font-family mayuscula
						font-size 1.2em
						letter-spacing -1px
						margin 0
				.portada
					display block
					float left
					margin 0 1em 0 0 
					width 12%
					img
						height auto
						width 90px
			.grupo
				font-size 1.2em
				padding 0 0 1em 0
		.guias
			display inline-block
			margin 0
			width 100%
			.ejemplar
				padding 0 0 0 1.5em
				position relative
				.detalles
					left 8.5em
					position absolute
					top 0em
					.autor
						color rgba(gris,1)
						font-size .7em
						font-weight bold
						margin 0
					.idioma
						margin .5em 0 0 0 
						img
							border-radius 50%
							width 20px
							height 20px
					.resumen
						font-size .8em
						margin 0
					.titulo
						color azul
						font-family mayuscula
						font-size 1.2em
						letter-spacing -1px
						margin 0
				.portada
					display block
					float left
					margin 0 1em 0 0 
					width 12%
					img
						height auto
						width 90px
			.grupo
				font-size 1.2em
				padding 0 0 1em 0
