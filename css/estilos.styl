article
	background white
	// border 1px solid rgba(borde,.8)
	border-radius 5px
	// box-shadow: 0 0 6px rgba(0,0,0,0.2);
	box-shadow: 0 2px 2px rgba(0,0,0,0.3);
	margin 1em
	padding 0 0 2em 0
	&:last-child
		margin-bottom 4.5em
	.encabezado
		margin 0 0 1em 0
		.iniciando
			&:before
				color claro
				content "\e605"
				font-family icono
				font-size .9em
				font-weight none
				position absolute
				right .6em
				top .3em
		.libro
			&:before
				color claro
				content "\e600"
				font-family icono
				font-size .9em
				font-weight none
				position absolute
				right .6em
				top .3em
		.numero
			background azul
			color fondo
			float left
			font-family mayuscula
			font-size .5em
			font-weight bold
			height 1.7em 
			line-height 1.5
			margin 1em 1.5em 0 0
			padding .15em 0 0 0 
			position relative
			text-align center
			width 2em 
			z-index 0
			&:after
				border-top solid 0 transparent
				border-left solid .7em azul
				border-bottom solid 1.8em transparent
				border-right solid 0 transparent
				content ""
				left 2em
				position absolute
				top 0px
		.nombre
			display block
			line-height 1em
			margin .4em .5em 0 2em
			text-align left
		.video
			&:before
				color claro
				content "\e601"
				font-family icono
				font-size .9em
				font-weight none
				position absolute
				right .6em
				top .3em
