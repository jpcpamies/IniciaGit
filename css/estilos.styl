// Fuentes =========================================
titulo = lobster, sans-serif
texto = raleway, sans-serif
mayuscula = lucida grande

// Colores =========================================
fondo = rgb(237,241,243)
borde = rgb(198,207,211)
boton = rgba(111,129,148, .5)
hover = rgba(0,0,0,.7)
azul = #3b84bf
gris = #343434
claro = #ebf0f4

@font-face {
	font-family: 'icono';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
	
article
	background white
	border-radius 5px
	box-shadow: 0 0 6px rgba(0,0,0,0.2);
	margin 1em
	padding 0 0 1em 0
	.encabezado
		margin 0 0 1em 0
		.numero
			background azul
			color fondo
			float left
			font-family mayuscula
			font-size .5em
			font-weight bold
			height 1.7em 
			line-height 1.5
			margin 1em 1.5em 0 0
			padding .15em 0 0 0 
			position relative
			text-align center
			width 2em 
			z-index 0
			&:after
				border-top solid 0 transparent
				border-left solid .7em azul
				border-bottom solid 1.8em transparent
				border-right solid 0 transparent
				content ""
				left 2em
				position absolute
				top 0px

		.nombre
			display block
			line-height 1em
			margin .4em .5em 0 2em
			text-align left
	.materiales
		background claro
		border-bottom 1px solid borde
		border-top 1px solid borde
		margin 1em 0 3em 0 
		padding 3.5em 3.5em 2em 3.5em
		.video
		.libro
			p
				font-family mayuscula
				font-size 1.3em
				letter-spacing -2px
		.video
			.contenedor
				box-shadow 0 0 5px rgba(black,.5)
				height 0
				overflow hidden
				padding-bottom 56.25%
				padding-top 30px
				position relative
				iframe
					height  100%
					left 0
					position absolute
					top 0
					width 100%
		.libro
			display inline-block
			margin 0
			width 45%
			&:last-child
				margin 0
			&:nth-child(even)
				margin 0
			img
				display block
				height auto
				width 10em
			
body 
	background fondo
	color gris
	font-family texto
	font-size 15px

h1
	font-size 3em;
	font-family titulo
	font-weight normal
	margin 0 
	text-align center
	small
		border-top 1px solid borde
		color gris
		display block
		font-size .39em;
		line-height -5em
		margin .1em auto 0 auto 
		max-width 17em

h2
	display inline-block
	font-family mayuscula
	font-weight normal
	font-size 2em;
	letter-spacing -3px
	margin .5em 0 .5em 0

h3
	color azul
	font-family mayuscula
	font-weight normal
	letter-spacing -2px

p
	line-height 1.4
	margin .5em 2em
	&:first-child 
		margin 0 2em 0 2em

// Break points

@media screen and (min-width: 992px) 
	@import "bp3.styl"


@media screen and (max-width: 992px) 
	@import "bp2.styl"


@media screen and (max-width: 630px) 
	@import "bp1.styl"
