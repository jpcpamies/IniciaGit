
article
	background white
	border-radius 5px
	box-shadow 0 1px 0 rgba(black,.2)
	margin .6em .5em
	padding 0 0 1em 0
	.encabezado
		margin 0 0 1em 0
		.numero
			background azul
			color fondo
			float left
			font-family mayuscula
			font-size .5em
			font-weight bold
			height 1.7em 
			line-height 1.5
			margin 1em 1.5em 0 0
			padding .15em 0 0 0 
			position relative
			text-align center
			width 2em 
			z-index 0
			&:after
				border-top solid 0 transparent
				border-left solid .7em azul
				border-bottom solid 1.8em transparent
				border-right solid 0 transparent
				content ""
				left 2em
				position absolute
				top 0px

		.nombre
			display block
			line-height 1em
			margin .4em .5em 0 2em
			text-align left
	.materiales
		background claro
		border-bottom 1px solid borde
		border-top 1px solid borde
		margin 1em 0 
		padding 1em
		.video
		.libro
			p
				border-top 1px solid white
				box-shadow 0 -1px 0 borde
				font-family mayuscula
				font-size 1.3em
				letter-spacing -2px
				margin 1em 0 0 0 
				padding .2em 0 0 0 
		.video
			display inline-block
			margin 1em 0
			width 100%
			&:last-child
				margin 1em 0 
			&:nth-child(even)
				margin 1em 0 
			.contenedor
				box-shadow 0 0 5px rgba(black,.5)
				height 0
				overflow hidden
				padding-bottom 56.25%
				padding-top 30px
				position relative
				iframe
					height  100%
					left 0
					position absolute
					top 0
					width 100%
		.libro
			display inline-block
			margin 1em 0
			width 100%
			img
				box-shadow 0 0 5px rgba(black,.5)
				display block
				height auto
				margin auto
				width 10em
			p
				text-align center

p
	line-height 1.4
	margin .5em 1em
	&:first-child 
		margin 0 1em 0 1em

footer
	background azul
	height 10em
	.avatar
		background white
		display inline-block
		float left
		height 10em
		position relative
		width 9.5em
		&:after
			border-bottom solid 10em transparent
			border-left solid 5em white
			border-right solid 10px transparent
			border-top solid 0 green
			content ""
			left 9.5em
			position absolute
			top 0px
		img
			border 2px solid white
			border-radius 50%
			box-shadow 0 0 2px black
			height auto
			left 1em
			position absolute
			top 1em
			width 3em
			z-index 5

		p
			color gris
			font-size 1em
			left 4em
			line-height 1.1em;
			position absolute
			text-align left
			top 1.5em
			white-space nowrap
			z-index 4

	.social
		position relative
		// text-shadow 1px 1px 0px rgba(black,.5)
		z-index 3
		a
			color white
			font-family texto
			font-size 1.5em
			font-weight bold
		.twitter
		.github
		.email
			position absolute
			transition all .2s ease
			-webkit-transition all .2s ease
			&:before
				font-family icono
				margin 0 .5em 0 0
				vertical-align bottom

		.twitter
			right .5em
			text-decoration none
			top .7em
			&:before
				content "\e606"
			&:hover
				color #21b2e9
				
		.github
			right .5em
			text-decoration none
			top 2.7em
			&:before
				content "\e609"
			&:hover
				color gris
				text-decoration none

		.email
			right .5em
			text-decoration none
			top 4.7em
			&:before
				content "\e602"
			&:hover
				color #f6ca2d

section
	background #dcdcdc
	margin -.6em .0
	padding .6em 0

.caja
	background claro
	border-top 1px solid borde
	border-bottom 1px solid borde
	margin 0 0 1em 0
	padding 0 0 .7em 0
	.resumen
		padding 1em
	.autor
		color grey
		margin-bottom 0
		padding 0 0 0 1em
	.fecha
		color grey
		margin 0 1em
		padding 0 0 0 1em
	h3
		font-size 1.5em
		margin 1em .5em
		text-align center


