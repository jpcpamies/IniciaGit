
header
	height 220px
	left 0px
	padding 1em 0 0 0 
	position fixed
	top 0px
	width 325px
	img
		display block
		margin .5em auto
		width 100px

footer
	background claro
	border-top 1px solid white
	bottom 0px
	box-shadow 0 -1px 0 borde
	height 50px
	left 0px
	position fixed
	width 100%
	.avatar
		// background red
		left 341px
		padding 0 35px 0 5px 
		position absolute
		transition all .2s ease
		-webkit-transition all .2s ease
		&:hover
			background rgba(black,.05)
			p
				color gris
		img
			border 3px solid white
			border-radius 50%
			box-shadow 0 0 1px rgba(black,.5)
			height auto
			margin .25em 0 0 1em
			width 37px
		p
			color #b3b3b3 
			left 40px
			position relative 
			top -42px
			transition all .2s ease
			-webkit-transition all .2s ease
	.social
		.email
			// background green
			color #b3b3b3 
			left 602px
			line-height 3.2em
			padding 0 25px 
			position absolute
			text-decoration none
			top 0px
			transition all .2s ease
			-webkit-transition all .2s ease
