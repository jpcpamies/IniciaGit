
body
	position relative

h1
	color white
	display inline-block
	font-family titulo
	font-size 2.5em;
	font-weight normal
	left 35px
	margin 0 0 0 2.2em
	position absolute
	text-shadow 2px 2px 0 gris
	top 15px
	small
		border-top none
		color white
		display inline-block
		font-size .5em;
		left 5px
		line-height -5em
		position absolute
		top 40px
		white-space nowrap

header
	background-attachment: fixed;
	background-image url(../img/hero.jpg)
	background-position center 50px
	background-repeat no-repeat
	background-size  100% auto 
	height 100px
	left 0px
	top 0px
	width 100%
	z-index 15
	-webkit-filter brightness(.95)
	img 
		left 1.2em
		height auto
		position relative
		top 1.2em
		width 80px
	.hero
		display none

footer
	background claro
	border-top 1px solid white
	bottom 0px
	box-shadow 0 -1px 0 borde
	height 50px
	left 0px
	position fixed
	width 100%
	.avatar
		// background red
		left 341px
		padding 0 35px 0 5px 
		position absolute
		transition all .2s ease
		-webkit-transition all .2s ease
		&:hover
			background rgba(black,.05)
			p
				color gris
		img
			border 3px solid white
			border-radius 50%
			box-shadow 0 0 1px rgba(black,.5)
			height auto
			margin .25em 0 0 1em
			width 37px
		p
			color #b3b3b3 
			left 40px
			position relative 
			top -42px
			transition all .2s ease
			-webkit-transition all .2s ease
	.social
		.email
			// background green
			color #b3b3b3 
			left 602px
			line-height 3.2em
			padding 0 25px 
			position absolute
			text-decoration none
			top 0px
			transition all .2s ease
			-webkit-transition all .2s ease
			&:before
				content "\e602"
				font-family icono
				font-size 1.2em
			&:hover
				background #f6ca2d
				color white
		.github
			// background blue
			border-right 1px solid borde
			color #b3b3b3 
			left 0px
			line-height 3.2em
			padding 0 160.5px  
			position absolute
			text-decoration none
			top 0px
			transition all .2s ease
			-webkit-transition all .2s ease
			&:before
				content "\e609"
				font-family icono
				font-size 1.2em
			&:hover
				background rgba(black,.05)
				border-color borde
				color gris
		.twitter
			// background blue
			color #b3b3b3 
			left 534px
			line-height 3.2em
			padding 0 25px 
			position absolute
			text-decoration none
			top 0px
			transition all .2s ease
			-webkit-transition all .2s ease
			&:before
				content "\e606"
				font-family icono
				font-size 1.2em
			&:hover
				background #21b2e9
				color white

nav
	bottom 50px
	left 0px
	overflow-y auto
	// position fixed
	position relative
	top 20px
	width 325px
	ul
		margin 0
		padding 0
		li
			position relative
			a
				text-decoration none
				display block
			.capitulo
				background azul
				border-radius 5px
				color claro
				margin 1.2em 0 1.3em 1em
				padding .4em 1.5em .4em 1em
				transition all .2s ease
				-webkit-transition all .2s ease
				&:hover
					background gris
			.ejercicio
				&:after
					color rgba(azul,.7)
					content "\e603"
					font-family icono
					font-size 1.2em
					font-weight none
					position absolute
					right .4em
					top .4em
				&:hover
					background rgba(black,.05)
			.iniciando
				&:after
					color rgba(azul,.7)
					content "\e605"
					font-family icono
					font-size 1.2em
					font-weight none
					position absolute
					right .5em
					top .4em
				&:hover
					background rgba(black,.05)
			.libro
				&:after
					color rgba(azul,.7)
					content "\e600"
					font-family icono
					font-size 1.1em
					font-weight none
					position absolute
					right .5em
					top .4em
				&:hover
					background rgba(black,.05)
			.oro
				&:after
					color rgba(azul,.7)
					content "\e604"
					font-family icono
					font-size 1.2em
					font-weight none
					position absolute
					right .4em
					top .4em
				&:hover
					background rgba(black,.05)
			.solo
				border 1px solid boton
				border-radius 5px
				color azul
				margin 0 0 .2em 1em
				padding .4em 1.5em .4em 1em
				position relative
				transition all .2s ease
				-webkit-transition all .2s ease
				&:hover
					background rgba(black,.05)
			.uno
				&:after
					background claro
					border-radius 50%
					color azul
					content "1"
					font-family arial
					font-size .9em
					font-weight none
					height 1.2em
					position absolute
					right .5em
					text-align center
					top .55em
					width 1.2em
				&:hover
					&:after
						color gris
			.video
				&:after
					color rgba(azul,.7)
					content "\e601"
					font-family icono
					font-size 1.1em
					font-weight none
					position absolute
					right .5em
					top .4em
				&:hover
					background rgba(black,.05)
		ul 
			border 1px solid boton
			border-radius 5px
			margin -1.1em 0 1em 1em
			li 
				border-bottom 1px solid boton
				&:last-child
					border-bottom none
			a
				color azul
				padding .4em 1.5em .4em 1em
				position relative
				transition all .2s ease
				-webkit-transition all .2s ease
				&:after
					color rgba(azul,.7)
					content "\e613"
					font-family icono2
					font-size 1.2em
					font-weight none
					position absolute
					right .2em
					top .4em
				&:hover
					background rgba(black,.05)

