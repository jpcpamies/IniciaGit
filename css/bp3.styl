			// background blue
			border-right 1px solid borde
			color #b3b3b3 
			left 0px
			line-height 3.2em
			padding 0 160.5px  
			position absolute
			text-decoration none
			top 0px
			transition all .2s ease
			-webkit-transition all .2s ease
