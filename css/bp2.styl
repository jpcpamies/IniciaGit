
article
	figure
		text-align center
		.laptop
		.movil
		.tablet
			display inline-block
			height 130px
			width auto

	&:last-child
		margin-bottom 0
	.materiales_libro
		.libros
			.ejemplar
				.portada
					display block
					float left
					margin 0 1em 0 0 
					width 12%
		.guias
			.ejemplar
				.portada
					display block
					float left
					margin 0 1em 0 0 
					width 12%

header
	height 0
	overflow hidden
	padding-bottom 155px
	padding-top 20px
	position relative
	h1
		text-align center

	img
		display block
		margin  0 auto
		width 85px
		// -webkit-filter: brightness(1.1);
	.hero
		height 100%
		left -9em
		margin 0 auto
		position absolute
		top 0
		width auto
		z-index -2

footer
	background azul
	height 10em
	.avatar
		background white
		display inline-block
		float left
		height 10em
		position relative
		width 9.5em
		transition all .2s ease
		-webkit-transition all .2s ease
		&:after
			border-bottom solid 10em transparent
			border-left solid 5em white
			border-right solid 10px transparent
			border-top solid 0 green
			content ""
			left 9.5em
			position absolute
			top 0px
		img
			border-radius 50%
			height auto
			left 1.2em
			position absolute
			top 1em
			width 3em
			z-index 5
			-webkit-filter: grayscale(1);
			&:hover
				-webkit-filter: grayscale(0);
		p
			color gris
			font-size 1em
			left 2.7em
			line-height 1.1em;
			position absolute
			text-align left
			top 1.4em
			white-space nowrap
			z-index 4
	.social
		position relative
		z-index 3
		a
			color white
			font-family texto
			font-size 1.5em
			font-weight bold
		.twitter
		.github
		.email
			position absolute
			transition all .2s ease
			-webkit-transition all .2s ease
			&:before
				font-family icono
				margin 0 .5em 0 0
				vertical-align bottom

		.twitter
			right .5em
			text-decoration none
			top .7em
			&:before
				content "\e606"
			&:hover
				color #21b2e9
				
		.github
			right .5em
			text-decoration none
			top 2.7em
			&:before
				content "\e609"
			&:hover
				color gris
				text-decoration none

		.email
			right .5em
			text-decoration none
			top 4.7em
			&:before
				content "\e602"
			&:hover
				color #f6ca2d
	.titulo
		display none

nav
	cursor pointer
	overflow-x hidden
	position relative
	z-index 5
	&:after
		color white
		content "\e60a"
		font-family icono
		font-size 1.7em
		position absolute
		right .5em
		top .4em
		width 30px

section
	background #e4e1df
	margin -.6em 0
	padding .6em 0 2em 0

#mm0
	background #6a2273
	border .5px solid rgba(azul,.05)
	color white
	cursor pointer
	font-size 1.5em
	height 2em
	left -5px
	// opacity .9
	position relative
	width 109%

.materiales_video
	.video
		width 45%
		&:nth-child(odd)
			margin 0 1em 0 3.5%
			width 45%
		&:last-child
			margin -1em 1em 0 3.5%

.fixed 
	box-shadow 0 2px 0 rgba(gris,.2)
	left 0px
	position fixed
	opacity .98
	right 0px
	top -1px

.sombra
	height 175px
	left 0px
	position absolute
	top 0px
	width 100%
	z-index -5
	@css {
		background: rgb(254,172,130); /* Old browsers */
		background: -moz-linear-gradient(top,  rgba(254,172,130,1) 0%, rgba(255,206,151,1) 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(254,172,130,1)), color-stop(100%,rgba(255,206,151,1))); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top,  rgba(254,172,130,1) 0%,rgba(255,206,151,1) 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top,  rgba(254,172,130,1) 0%,rgba(255,206,151,1) 100%); /* Opera 11.10+ */
		background: -ms-linear-gradient(top,  rgba(254,172,130,1) 0%,rgba(255,206,151,1) 100%); /* IE10+ */
		background: linear-gradient(to bottom,  rgba(254,172,130,1) 0%,rgba(255,206,151,1) 100%); /* W3C */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#feac82', endColorstr='#ffce97',GradientType=0 ); /* IE6-9 */
	}

		














