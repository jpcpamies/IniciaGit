		display inline-block
		margin 0 0 0 3.5em
		width 18em
		h3
			background white
			color gris
			left .8em
			padding 1em
			position relative
			top -3.55em
			width 15em
		.libro
			// border 1px solid
			left 3.8em
			top -3.6em
			padding 1em 3em
			width 5.8em
			white-space nowrap
	.contenedor_imagen
		img
			box-shadow 0 10px 30px rgba(black,.3)
