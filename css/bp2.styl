

article
	background white
	border-radius 5px
	box-shadow 0 1px 0 rgba(black,.2)
	margin 1em
	padding 0 0 1em 0
	
body 
	background fondo
	color gris
	font-family texto
	font-size 15px

h1
	font-size 3em;
	font-family titulo
	font-weight normal
	margin 0 0 .5em 0
	text-align center
	small
		border-top 1px solid borde
		color gris
		display block
		font-size .39em;
		line-height -5em
		margin .1em auto 0 auto 
		max-width 17em

h2
	display inline-block
	font-family mayuscula
	font-weight normal
	font-size 2em;
	letter-spacing -3px
	margin .5em 0 .5em 0

h3
	color azul
	font-family mayuscula
	font-weight normal
	font-size 1.5em
	letter-spacing -2px
	margin .5em
	text-align center
	white-space normal

header
	img
		display block
		margin 1em auto 0 auto
		width 80px

footer
	background azul
	height 4.5em
	.avatar
		background white
		display inline-block
		float left
		height 4.5em
		position relative
		width 17.5em
		&:after
			border-bottom solid 4.5em transparent
			border-left solid 2.2em white
			border-right solid 4px transparent
			border-top solid 0 green
			content ""
			left 17.5em
			position absolute
			top 0px
		img
			border 2px solid white
			border-radius 50%
			box-shadow 0 0 2px black
			height auto
			left 5em
			position absolute
			top .7em
			width 3em
			z-index 5

		p
			color gris
			font-size 1em
			left 7.5em
			line-height 1.1em;
			position absolute
			text-align left
			top 1.3em
			white-space nowrap
			z-index 4

	.social
		position relative
		// text-shadow 1px 1px 0px rgba(black,.5)
		z-index 3
		a
			color white
			font-family texto
			font-size 1.5em
			font-weight bold
		.twitter
		.github
		.email
			position absolute
			transition all .2s ease
			-webkit-transition all .2s ease
			&:before
				font-family icono
				margin 0 .5em 0 0
				vertical-align bottom

		.twitter
			right .5em
			text-decoration none
			top .8em
			&:before
				content "\e606"
			&:hover
				color #21b2e9
				
		.github
			right 3em
			text-decoration none
			top .8em
			&:before
				content "\e609"
			&:hover
				color gris
				text-decoration none

		.email
			right 5.7em
			text-decoration none
			top .8em
			&:before
				content "\e602"
			&:hover
				color #f6ca2d

nav
	overflow-x hidden
	position relative
	cursor pointer
	z-index 5

p
	line-height 1.4
	margin .5em 2em
	&:first-child 
		margin 0 2em 0 2em

section
	background #dcdcdc
	margin -.6em 0
	padding .6em 0 4em 0

#mm0
	background azul
	border .5px solid rgba(azul,.05)
	color white
	cursor pointer
	font-size 1.5em
	height 2em
	left -5px
	position relative
	width 109%

.arriba
	bottom 1em
	color white
	left 1em
	opacity .95
	position fixed
	-webkit-transition all .1s ease
	transition all .1s ease
	z-index 10
	a 
		background #d9d9d9
		border-radius 50%
		color: white;
		display block
		height 3em
		position relative
		text-decoration none
		transition all .2s ease
		-webkit-transition all .2s ease
		width 3em
		&:after
			content "\e608"
			font-family icono
			font-size 2em
			text-align center
			position absolute
			top .2em
			left .45em
		&:hover
			background gris

.autor
	color grey
	font-family mayuscula
	font-weight none
	margin 0 .5em 1em .5em
	text-align center

.caja
	background claro
	border 1px solid borde
	border-radius 4px
	box-shadow 0 2px 5px rgba(black,.3)
	display inline-block
	margin 0 .8em 1em .8em
	vertical-align top
	width 45%

.contenedor_imagen
	background white
	border-bottom 1px solid borde 
	border-top 1px solid borde 
	height 15em
	text-align center
	img 
		display block
		height auto
		margin 1em auto 1em auto
		width 10em
	span
		background orange
		border-radius 3px
		color claro
		font-family mayuscula
		font-size 1em
		padding .1em .5em
	.guia
		display block
		font-size 10em
		margin .07em 0 0 0 
		text-decoration none
		width 100%
		&:after
			color gris
			content "\e605"
			font-family icono

	&:hover
		background claro

.contenedor_video
	height 0
	overflow hidden
	padding-bottom 56.25%
	padding-top 30px
	position relative
	iframe
		height 100%
		left 0px
		position absolute
		top 0px
		width 100%

.encabezado
	margin 0 0 1em 0
	.numero
		background azul
		color fondo
		float left
		font-family mayuscula
		font-size .5em
		font-weight bold
		height 1.7em 
		line-height 1.5
		margin 1em 1.5em 0 0
		padding .15em 0 0 0 
		position relative
		text-align center
		width 2em 
		z-index 0
		&:after
			border-top solid 0 transparent
			border-left solid .7em azul
			border-bottom solid 1.8em transparent
			border-right solid 0 transparent
			content ""
			left 2em
			position absolute
			top 0px

	.nombre
		display block
		line-height 1em
		margin .4em .5em 0 2em
		text-align left

.horizontal
	margin 0 auto
	padding 0 0 0 1em
	width 90%
	white-space normal

.lista
	color white
	font-size 1.7em
	position absolute
	right .5em
	top .4em
	width 30px
	&:after
		content "\e60a"
		font-family icono

.fecha
	color grey

.fixed 
	box-shadow 0 2px 2px rgba(azul,.5)
	left 0px
	position fixed
	right 0px
	top -1px

.puntos
	display none















